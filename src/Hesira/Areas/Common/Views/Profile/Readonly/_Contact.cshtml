@using Hesira.Resources
@model Hesira.Areas.Common.Models.UserProfileContactModel

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resource.Email:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@(!string.IsNullOrEmpty(Model.Email) ? Model.Email : Resource.NoInformation)</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resource.TelephoneNumber:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@(!string.IsNullOrEmpty(Model.PhoneNumber) ? Model.PhoneNumber : Resource.NoInformation)
                    </p>
                </div>
            </div>

            <div class="form-group">
                <label class="col-sm-2 control-label">@Resource.PhysicalAddress:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">
                        @(!string.IsNullOrEmpty(Model.PhysicalAddress) ? Model.PhysicalAddress : Resource.NoInformation)
                </p>
            </div>
        </div>
        </form>
    </div>
</div>

