@using Hesira.Resources
@model Hesira.Areas.Common.Models.UserProfileBasicModel
          
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resource.Role:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@(!string.IsNullOrEmpty(Model.Role) ? Model.Role : Resource.NoInformation)</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resource.CNP:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@(!string.IsNullOrEmpty(Model.CNP) ? Model.CNP : Resource.NoInformation)</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resource.Citizenship:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@(!string.IsNullOrEmpty(Model.Citizenship) ? Model.Citizenship : Resource.NoInformation)</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resource.Country:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@(!string.IsNullOrEmpty(Model.Country) ? char.ToUpper(Model.Country[0]) + Model.Country.Substring(1)  : Resource.NoInformation)</p>
                </div>
            </div>
        </form>
    </div>
</div>