@using Hesira.Resources
@model Hesira.Areas.Common.Models.UserProfileInfoModel

<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <form class="form-horizontal" role="form">
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resource.Firstname:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@(!string.IsNullOrEmpty(Model.Firstname) ? Model.Firstname : Resource.NoInformation)</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resource.Lastname:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@(!string.IsNullOrEmpty(Model.Lastname) ? Model.Lastname : Resource.NoInformation)</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resource.Profession:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@(!string.IsNullOrEmpty(Model.Profession) ? Model.Profession : Resource.NoInformation)</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resource.State:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@(!string.IsNullOrEmpty(Model.State) ? Model.State : Resource.NoInformation)</p>
                </div>
            </div>
            <div class="form-group">
                <label class="col-sm-2 control-label">@Resource.BirthDay:</label>
                <div class="col-sm-10">
                    <p class="form-control-static">@(Model.BirthDay != null && Model.BirthDay != DateTime.MinValue?  Model.BirthDay.ToLongDateString() : Resource.NoInformation) </p>
                </div>
            </div>
        </form>
    </div>
</div>
