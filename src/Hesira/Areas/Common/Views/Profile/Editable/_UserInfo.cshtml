@model Hesira.Areas.Common.Models.UserProfileInfoEditableModel

@using BForms.Html
@using BForms.Models
@using Hesira.Resources


<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        @using (Html.BsBeginForm(null, null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "userinfoeditable" }, BsTheme.Blue))
        {
            <div class="form-group">
                @Html.BsLabelFor(m => m.Firstname, new { @class = "col-sm-2" })
                <div class="col-sm-10">
                    <div class="input-group">
                        @Html.BsGlyphiconAddon(Glyphicon.User)
                        @Html.BsInputFor(m => m.Firstname)
                        @Html.BsValidationFor(m => m.Firstname)

                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.BsLabelFor(m => m.Lastname, new { @class = "col-sm-2" })
                <div class="col-sm-10">
                    <div class="input-group">
                        @Html.BsGlyphiconAddon(Glyphicon.User)
                        @Html.BsInputFor(m => m.Lastname)
                        @Html.BsValidationFor(m => m.Lastname)
                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.BsLabelFor(m => m.Profession, new { @class = "col-sm-2" })
                <div class="col-sm-10">
                    <div class="input-group">
                        @Html.BsInputFor(m => m.Profession)
                        @Html.BsValidationFor(m => m.Profession)

                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.BsLabelFor(m => m.StateDropdown, new { @class = "col-sm-2" })
                <div class="col-sm-10">
                    <div class="input-group">
                        @Html.BsSelectFor(m => m.StateDropdown)
                        @Html.BsValidationFor(m => m.StateDropdown)

                    </div>
                </div>
            </div>


            <div class="form-group">
                @Html.BsLabelFor(m => m.BirthDay, new { @class = "col-sm-2" })
                <div class="col-sm-10">
                    <div class="input-group">
                        @Html.BsInputFor(m => m.BirthDay, new Dictionary<string, object>(){
                                {"class", "blue"}
                                }, new { wrapperClass = "blue", closeOnChange = true })
                        @Html.BsValidationFor(m => m.BirthDay)

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default bs-savePanel">@Resource.Save</button>
                    <button type="submit" class="btn btn-danger pull-right bs-cancelEdit">@Resource.Cancel</button>
                </div>
            </div>
        }
    </div>
</div>
