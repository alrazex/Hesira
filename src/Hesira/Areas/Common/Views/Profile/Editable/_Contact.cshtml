@model Hesira.Areas.Common.Models.UserProfileContactEditableModel

@using BForms.Html
@using BForms.Models
@using Hesira.Resources


<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        @using (Html.BsBeginForm(null, null, null, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "usercontacteditable" }, BsTheme.Blue))
        {
            <div class="form-group">
                @Html.BsLabelFor(m => m.Email, new { @class = "col-sm-2" })
                <div class="col-sm-10">
                    <div class="input-group">
                        @Html.BsGlyphiconAddon(Glyphicon.Envelope)
                        @Html.BsInputFor(m => m.Email)
                        @Html.BsValidationFor(m => m.Email)

                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.BsLabelFor(m => m.PhoneNumber, new { @class = "col-sm-2" })
                <div class="col-sm-10">
                    <div class="input-group">
                        @Html.BsGlyphiconAddon(Glyphicon.Phone)
                        @Html.BsInputFor(m => m.PhoneNumber)
                        @Html.BsValidationFor(m => m.PhoneNumber)

                    </div>
                </div>
            </div>

            <div class="form-group">
                @Html.BsLabelFor(m => m.PhysicalAddress, new { @class = "col-sm-2" })
                <div class="col-sm-10">
                    <div class="input-group">
                        @Html.BsGlyphiconAddon(Glyphicon.MapMarker)
                        @Html.BsInputFor(m => m.PhysicalAddress)
                        @Html.BsValidationFor(m => m.PhysicalAddress)

                    </div>
                </div>
            </div>


            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-default bs-savePanel">@Resource.Save</button>
                    <button type="submit" class="btn btn-danger pull-right bs-cancelEdit">@Resource.Cancel</button>
                </div>
            </div>
        }

    </div>
</div>
